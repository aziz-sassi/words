<%= form_for @quote do |f| %>
  <div class="form-group">
    <%= f.text_area :text, class: "form-control", size: "60x12", placeholder: "Enter Words Here..." %>
  </div>

  <div class="form-group">
    <%= f.text_field :source, class: "form-control", placeholder: "Source..." %>
  </div>

  <div class="form-group">
    <%= f.text_field :author, class: "form-control", placeholder: "Author..." %>
  </div>

  <%= f.submit locals[:submit_action], class: "btn btn-primary" %>
<% end %>
