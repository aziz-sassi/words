<span>
  <%= link_to new_quote_path do %>
    <i class="fas fa-pen-fancy fa-2x float-right pr-2"></i>
  <% end %>
</span>

<div class="border-bottom">
  <h3 class="text-center">Quotes</h3>
</div>

<div class="card-deck">
  <% @quotes.each do |quote| %>
    <div class="quote-summary rounded-0 card">

      <div class="card-body">
        <!--Start Card Body -->
        <%= link_to quote_path(quote, return_to: request.url), class: "open" do %>
          <div><p class="card-text"><%= quote.text.truncate(100) %></div>

          <div id="quote-created-at" class="mt-2 mb-0">
            <p class="card-text">
              <small class="text-muted">
                Created <%= QuoteDateHelper.display_humanized_quote_age(quote) %>
              </small>
            </p>
          </div>
        <% end %>

        <ul class="card-button pl-0 mt-4 mb-0">
          <li>
            <%= link_to edit_quote_path(quote, return_to: request.url) do %>
              <i class="fas fa-edit"></i>
            <% end %>
          </li>

          <li>
            <%= link_to quote_path(quote, return_to: request.url), method: :delete, data: { confirm: "Are you sure?"  } do %>
              <i class="fas fa-trash-alt"></i>
            <% end %>
          </li>
        </ul>
      </div>
      <!--End Card Body -->
    </div>
  <% end %>
</div>

<div>
  <%= link_to_prev_page @quotes, 'Previous Page', class: "btn btn-secondary" %>
  <%= link_to_next_page @quotes, 'Next Page', class: "btn btn-secondary" %>
</div>
